/* pages/me/me.wxss */
.the-weather {
  width: 100%;
  overflow: hidden;
}
.wea-thead {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(to bottom, #9ad4f0, #fff);
  position: relative;
}
.wea-container {
  display: flex;
  width: 100%;
  padding: 40rpx 20rpx;
  text-align: center;
}
.wea-city {
  display: flex;
  flex-direction: column;
  width: 50%;
  text-align: center;
}
.wea-city .c-name {
  padding: 0 20rpx;
  color: #333;
  font-size: 40rpx;
  font-weight: 600;
}
.wea-city .c-temp {
  margin-top: 20rpx;
  overflow: hidden;
}
.temp-now {
  font-size: 80rpx;
}
.temp-state {
  font-size: 30rpx;
  color: cornflowerblue;
}
.wea-life {
  width: 50%;
  min-height: 20rpx;
  overflow: hidden;
  border-bottom: 1px solid #dff2fd;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.life-swiper {
  width: 100%;
  height: 240rpx;
  color: #666;
}
.life-swiper .li-item {
  width: 100%;
  height: 100%;
  line-height: 50rpx;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}